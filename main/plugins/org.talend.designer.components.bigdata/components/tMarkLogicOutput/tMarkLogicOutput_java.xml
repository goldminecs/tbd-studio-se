<COMPONENT>
    <HEADER
        AUTHOR="Talend"
        COMPATIBILITY="ALL"
        PLATEFORM="ALL"
        RELEASE_DATE="20151030A"
        SERIAL=""
        STARTABLE="false"
        STATUS="ALPHA"
        DATA_AUTO_PROPAGATE="false"
        SCHEMA_AUTO_PROPAGATE="true"
        HAS_CONDITIONAL_OUTPUTS="true"
        VERSION="0.1">
        <SIGNATURE/>
    </HEADER>

    <FAMILIES>
        <FAMILY>Big Data/MarkLogic</FAMILY>
        <FAMILY>Databases/DB Specifics/MarkLogic</FAMILY>
    </FAMILIES>

    <DOCUMENTATION>
        <URL/>
    </DOCUMENTATION>

    <CONNECTORS>
      <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
      <CONNECTOR NAME="REJECT" CTYPE="FLOW" MAX_INPUT="0"
                 MAX_OUTPUT="1"
                 LINE_STYLE="2"
                 COLOR="FF0000"
                 BASE_SCHEMA="FLOW"
      />
      <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
      <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
      <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
      <CONNECTOR CTYPE="COMPONENT_OK"/>
      <CONNECTOR CTYPE="COMPONENT_ERROR"/>
      <CONNECTOR CTYPE="RUN_IF"/>
    </CONNECTORS>

    <PARAMETERS>
        <PARAMETER
            NAME="PROPERTY"
            FIELD="PROPERTY_TYPE"
            SHOW="true"
            NUM_ROW="1"
            REPOSITORY_VALUE="DATABASE:MARKLOGIC"
        />

        <PARAMETER
          NAME="USE_EXISTING_CONNECTION"
          FIELD="CHECK"
          NUM_ROW="3"
        >
          <DEFAULT>false</DEFAULT>
        </PARAMETER>

        <PARAMETER
          NAME="CONNECTION"
          FIELD="COMPONENT_LIST"
          REQUIRED="true"
          FILTER="tMarkLogicConnection"
          NUM_ROW="3"
          SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
          DYNAMIC_SETTINGS="true"
        />

        <PARAMETER
            NAME="HOST"
            FIELD="TEXT"
            NUM_ROW="5"
            REQUIRED="true"
            REPOSITORY_VALUE="SERVER_NAME"
            SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
        >
            <DEFAULT>"127.0.0.1"</DEFAULT>
        </PARAMETER>

        <PARAMETER
            NAME="PORT"
            FIELD="TEXT"
            NUM_ROW="5"
            REQUIRED="true"
            REPOSITORY_VALUE="PORT"
            SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
        >
            <DEFAULT>8000</DEFAULT>
        </PARAMETER>

        <PARAMETER
            NAME="DATABASE"
            FIELD="TEXT"
            NUM_ROW="5"
            REQUIRED="true"
            REPOSITORY_VALUE="SID"
            SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
        >
            <DEFAULT>"Documents"</DEFAULT>
        </PARAMETER>

        <PARAMETER
            NAME="USER_NAME"
            FIELD="TEXT"
            NUM_ROW="10"
            REPOSITORY_VALUE="USERNAME"
            REQUIRED="true"
            SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
        >
          <DEFAULT>""</DEFAULT>
        </PARAMETER>

        <PARAMETER
            NAME="PASSWORD"
            FIELD="PASSWORD"
            NUM_ROW="10"
            REPOSITORY_VALUE="PASSWORD"
            REQUIRED="true"
            SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
        >
          <DEFAULT>""</DEFAULT>
        </PARAMETER>

        <PARAMETER
            NAME="AUTHENTICATION_TYPE"
            FIELD="CLOSED_LIST"
            NUM_ROW="15"
            SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
        >
            <ITEMS DEFAULT="DIGEST">
                <ITEM NAME="DIGEST" VALUE="DIGEST" />
                <ITEM NAME="BASIC" VALUE="BASIC" />
            </ITEMS>
        </PARAMETER>

        <PARAMETER
            NAME="ACTION_TYPE"
            FIELD="CLOSED_LIST"
            NUM_ROW="25"
        >
            <ITEMS DEFAULT="INSERT">
                <ITEM NAME="INSERT" VALUE="INSERT" />
                <ITEM NAME="PATCH" VALUE="PATCH" />
                <ITEM NAME="DELETE" VALUE="DELETE" />
            </ITEMS>
        </PARAMETER>

        <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" NUM_ROW="35"
            REQUIRED="true"
        >
            <TABLE>
                <COLUMN KEY="true" LENGTH="255" NAME="docId"
                    TYPE="id_String" NULLABLE="false" READONLY="true" />
                <COLUMN KEY="false" LENGTH="255" NAME="docContent"
                    TYPE="id_Object" NULLABLE="false" READONLY="true" />
            </TABLE>
        </PARAMETER>

        <PARAMETER NAME="SCHEMA_REJECT" FIELD="SCHEMA_TYPE"
            REQUIRED="true" NUM_ROW="35" CONTEXT="REJECT"
        >
            <TABLE READONLY="true">
                <COLUMN KEY="false" LENGTH="255" NAME="errMessage"
                    TYPE="id_String" NULLABLE="false" CUSTOM="true" />
            </TABLE>
        </PARAMETER>
    </PARAMETERS>

    <ADVANCED_PARAMETERS>
        <PARAMETER
            NAME="DOC_TYPE"
            FIELD="CLOSED_LIST"
            NUM_ROW="15"
            NOT_SHOW_IF="ACTION_TYPE == 'DELETE'"
        >
            <ITEMS DEFAULT="GENERIC">
                <ITEM NAME="GENERIC" VALUE="GENERIC" NOT_SHOW_IF="ACTION_TYPE == 'PATCH'"/>
                <ITEM NAME="TEXT" VALUE="TEXT" NOT_SHOW_IF="ACTION_TYPE == 'PATCH'"/>
                <ITEM NAME="JSON" VALUE="JSON" />
                <ITEM NAME="XML" VALUE="XML" />
                <ITEM NAME="BINARY" VALUE="BINARY" NOT_SHOW_IF="ACTION_TYPE == 'PATCH'"/>
            </ITEMS>
        </PARAMETER>

        <PARAMETER
            NAME="AUTO_GENERATE_DOC_ID"
            FIELD="CHECK"
            NUM_ROW="25"
            SHOW_IF="(ACTION_TYPE == 'INSERT') AND (DOC_TYPE != 'GENERIC')"
        >
            <DEFAULT>false</DEFAULT>
        </PARAMETER>

        <PARAMETER
            NAME="DOC_ID_PREFIX"
            FIELD="TEXT"
            NUM_ROW="30"
            SHOW_IF="(AUTO_GENERATE_DOC_ID == 'true') AND (ACTION_TYPE == 'INSERT') AND (DOC_TYPE != 'GENERIC')"
        >
            <DEFAULT>"/"</DEFAULT>
        </PARAMETER>
    </ADVANCED_PARAMETERS>

    <CODEGENERATION>
        <IMPORTS>
            <IMPORT
                NAME="marklogic-client-api-4.0.3"
                MODULE="marklogic-client-api-4.0.3.jar"
                MVN="mvn:org.talend.libraries/marklogic-client-api-4.0.3/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="okhttp-3.9.0"
                MODULE="okhttp-3.9.0.jar"
                MVN="mvn:org.talend.libraries/okhttp-3.9.0/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="logging-interceptor-3.9.0"
                MODULE="logging-interceptor-3.9.0.jar"
                MVN="mvn:org.talend.libraries/logging-interceptor-3.9.0/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="okhttp-digest-1.15"
                MODULE="okhttp-digest-1.15.jar"
                MVN="mvn:org.talend.libraries/okhttp-digest-1.15/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="slf4j-api-1.7.25"
                MODULE="slf4j-api-1.7.25.jar"
                MVN="mvn:org.talend.libraries/slf4j-api-1.7.25/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="slf4j-log4j12-1.7.25"
                MODULE="slf4j-log4j12-1.7.25.jar"
                MVN="mvn:org.talend.libraries/slf4j-log4j12-1.7.25/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="jackson-core-2.9.1"
                MODULE="jackson-core-2.9.1.jar"
                MVN="mvn:org.talend.libraries/jackson-core-2.9.1/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="jackson-databind-2.9.1"
                MODULE="jackson-databind-2.9.1.jar"
                MVN="mvn:org.talend.libraries/jackson-databind-2.9.1/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="jackson-annotations-2.9.1"
                MODULE="jackson-annotations-2.9.1.jar"
                MVN="mvn:org.talend.libraries/jackson-annotations-2.9.1/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="javax.mail-1.6.0"
                MODULE="javax.mail-1.6.0.jar"
                MVN="mvn:org.talend.libraries/javax.mail-1.6.0/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="javax.ws.rs-api-2.1"
                MODULE="javax.ws.rs-api-2.1.jar"
                MVN="mvn:org.talend.libraries/javax.ws.rs-api-2.1/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
            <IMPORT
                NAME="okio-1.13.0"
                MODULE="okio-1.13.0.jar"
                MVN="mvn:org.talend.libraries/okio-1.13.0/6.0.0"
                REQUIRED_IF="USE_EXISTING_CONNECTION == 'false'"
            />
        </IMPORTS>
    </CODEGENERATION>

    <RETURNS>
        <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
        <RETURN NAME="NB_LINE_UPSERTED"  TYPE="id_Integer" AVAILABILITY="AFTER"/>
        <RETURN NAME="NB_LINE_DELETED"  TYPE="id_Integer" AVAILABILITY="AFTER"/>
        <RETURN NAME="NB_LINE_PATCHED"  TYPE="id_Integer" AVAILABILITY="AFTER"/>
        <RETURN NAME="NB_LINE_REJECTED" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    </RETURNS>

</COMPONENT>
